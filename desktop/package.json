{
  "name": "metricframe",
  "version": "1.0.0",
  "description": "MetricFrame - AI & Cybersecurity Metrics Dashboard",
  "main": "main.js",
  "author": "MetricFrame Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "cp ../frontend/.env.desktop ../frontend/.env.production.local 2>/dev/null || true && cd ../frontend && VITE_BASE_PATH=./ npm run build",
    "prebuild:mac": "cp ../frontend/.env.desktop ../frontend/.env.production.local 2>/dev/null || true && cd ../frontend && VITE_BASE_PATH=./ npm run build",
    "build": "electron-builder",
    "build:mac": "npm run prebuild:mac && electron-builder --mac",
    "build:mac:unsigned": "npm run prebuild:mac && SKIP_NOTARIZATION=true CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:mac:signed": "CSC_LINK=$CSC_LINK CSC_KEY_PASSWORD=$CSC_KEY_PASSWORD electron-builder --mac",
    "notarize:manual": "bash scripts/manual-notarize.sh all",
    "notarize:status": "bash scripts/manual-notarize.sh status",
    "notarize:staple": "bash scripts/manual-notarize.sh staple",
    "notarize:dmg": "bash scripts/manual-notarize.sh dmg",
    "build:win": "electron-builder --win",
    "build:win:signed": "CSC_LINK=$WIN_CSC_LINK CSC_KEY_PASSWORD=$WIN_CSC_KEY_PASSWORD electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --mac --win --linux",
    "dist:signed": "electron-builder --mac --win --linux --publish never"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/notarize": "^2.2.0"
  },
  "build": {
    "appId": "com.metricframe.app",
    "productName": "MetricFrame",
    "copyright": "Copyright Â© 2024 MetricFrame",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "node_modules/electron-store/**/*",
      "node_modules/conf/**/*",
      "node_modules/atomically/**/*",
      "node_modules/env-paths/**/*",
      "node_modules/ajv/**/*",
      "node_modules/ajv-formats/**/*",
      "node_modules/json-schema-typed/**/*",
      "node_modules/lodash.debounce/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend"
      },
      {
        "from": "../backend-dist",
        "to": "backend"
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "afterSign": "scripts/notarize.js",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "MetricFrame",
      "verifyUpdateCodeSignature": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "maintainer": "MetricFrame Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "automationacct01",
      "repo": "metric_frame"
    }
  }
}
