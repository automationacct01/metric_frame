# Database Configuration
DATABASE_URL=postgresql://nist:nist@db:5432/nistmetrics

# AI Credentials Encryption (required for user API key storage)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AI_CREDENTIALS_MASTER_KEY=your-32-byte-base64-encoded-key

# Dev Mode Override (for local development only)
# When AI_DEV_MODE=true and user is admin, uses system keys instead of requiring user config
AI_DEV_MODE=true
AI_DEV_PROVIDER=anthropic
AI_DEV_MODEL=claude-sonnet-4-5-20250929

# Legacy AI Configuration (used by AI_DEV_MODE)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
DEBUG=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
API_PREFIX=/api/v1

# Risk Scoring Thresholds (configurable)
RISK_THRESHOLD_LOW=0.85
RISK_THRESHOLD_MODERATE=0.65
RISK_THRESHOLD_ELEVATED=0.40